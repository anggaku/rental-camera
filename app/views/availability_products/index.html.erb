<p id="notice"><%= notice %></p>

<h1>Availability Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @availability_products.each do |availability_product| %>
      <tr>
        <td><%= availability_product.name %></td>
        <td><%= link_to 'Show', availability_product %></td>
        <td><%= link_to 'Edit', edit_availability_product_path(availability_product) %></td>
        <td><%= link_to 'Destroy', availability_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Availability Product', new_availability_product_path %>
