                  </div>
                  <div class="card-footer">
                    <small class="text-muted"><%= lensa.availability_product.name %></small>
                  </div>
                </div>
              </div>
            <% end %>
            <%= will_paginate @lensas, list_classes: %w(pagination justify-content-center), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

        <% elsif @category_product.id == 3 %>
            <% @peralatans.each do |peralatan| %>
