                </div>
              </div>
            <% end %>

            <%= will_paginate @peralatans, list_classes: %w(pagination justify-content-center), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <% end %>
        
          </div>
          <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->

      </div>
