                    <h6>Rp. <%= camera.price %>,-</h6>
                    <%= link_to 'Lihat detail', camera_path(camera), class: "btn btn-grab-it"%>
                  </div>
                  <div class="card-footer">
                    <small class="text-muted"><%= camera.availability_product.name %></small>
                  </div>
                </div>
              </div>
            <% end %>
            <%= will_paginate @cameras, list_classes: %w(pagination justify-content-center), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

        <% elsif @category_product.id == 2 %>
