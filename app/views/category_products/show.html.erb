                <div class="card shadow mb-5 bg-white rounded ">
                  <%= link_to image_tag(camera.image1, alt: camera.name, class: 'card-img-top'), camera_path(camera), class: "p-l-20 p-r-20 p-b-20 p-t-20" %>
