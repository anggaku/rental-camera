<p id="notice"><%= notice %></p>

<h1>Banks</h1>

<table>
  <thead>
    <tr>
      <th>Kode bank</th>
      <th>Nama bank</th>
      <th>No rekening</th>
      <th>Nama rekening</th>
      <th>Alamat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.kode_bank %></td>
        <td><%= bank.nama_bank %></td>
        <td><%= bank.no_rekening %></td>
        <td><%= bank.nama_rekening %></td>
        <td><%= bank.alamat %></td>
        <td><%= link_to 'Show', bank %></td>
        <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
        <td><%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

