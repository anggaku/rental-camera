<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Invoice</th>
      <th>Client</th>
      <th>Tgl payment</th>
      <th>Jumlah diterima</th>
      <th>Total keseluruhan</th>
      <th>Bank</th>
      <th>Status sewa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.invoice_id %></td>
        <td><%= payment.client_id %></td>
        <td><%= payment.tgl_payment %></td>
        <td><%= payment.jumlah_diterima %></td>
        <td><%= payment.total_keseluruhan %></td>
        <td><%= payment.bank_id %></td>
        <td><%= payment.status_sewa %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

